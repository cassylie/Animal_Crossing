@model IEnumerable<AnimalCrossing.Models.Student>

@{
    ViewBag.Title = "Liste des habitants";
}
<br /><br /><br /><br />
    <div class="jumbotron text-center">
        <h1>Liste des villageois</h1>
        <h4>Cliquez sur 
            @Html.ActionLink("Create New", "Create")
        pour ajouter un nouveau villageoi dans la liste
        </h4>
    </div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomhabitant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.espece)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.personnalite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.genre)
        </th>
        <th>Fonctionnalitées</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.nomhabitant)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.espece)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.personnalite)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.genre)
    </td>
    <td class="gestion">
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
