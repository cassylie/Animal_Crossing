@{
    ViewBag.Title = "Index";
}
<div class="container-fluid text-center w-25">
    <h3 class="text-center text-uppercase">Connectez-vous</h3><br>
    <div class="mb-4">
        <input type="text" class="form-control" id="login-username" placeholder="Adresse email" name="loginUsername">
    </div>
    <div class="mb-4">
        <input type="password" class="form-control" id="login-password" placeholder="Mot de passe" name="loginPassword">
    </div>
    <input type="submit" id="login" class="btn font-weight-bold bg-warning center-block text-uppercase" value="Se connecter">
    <br>
</div>
