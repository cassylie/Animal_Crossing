<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AnimalCrossing</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                   @Html.ActionLink("Accueil", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Habitants", "Index", "Student")</li>
                <li>@Html.ActionLink("Explorer", "ShowExplorerView", "Home")</li>
                <li>@Html.ActionLink("Celebre", "ShowCelebreView", "Home")</li>
                <li>@Html.ActionLink("Mise à jour", "ShowMAJView", "Home")</li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Connexion", "ShowConnexionView", "Home")</li>
            </ul>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AnimalCrossing</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>